{
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "files": {
    "ignore": [".angular"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "css": {
    "formatter": {
      "indentWidth": 4
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve",
      "indentWidth": 4
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none",
      "indentWidth": 2
    }
  },
  "linter": {
    "rules": {
      "style": {
        "useImportType": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}
